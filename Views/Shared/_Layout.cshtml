@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Postulate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Postulate.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/MDB5/css/mdb.min.css" asp-append-version="true" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <a href="#">Postulate</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Persona" asp-action="Index">
                        <i class="lni lni-user"></i>
                        <span>Usuario</span></a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Servicios"
                            asp-action="Index">
                        <i class="lni lni-agenda"></i>
                        <span>Servicios</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link"asp-area="" asp-controller="Trabajo"
                            asp-action="Index">
                        <i class="lni lni-cog"></i>
                        <span>Trabajos</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                        data-bs-target="#multi" aria-expanded="false" aria-controls="multi">
                        <i class="lni lni-layout"></i>
                        <span>Administracion</span>
                    </a>
                    <ul id="multi" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse"
                                data-bs-target="#multi-two" aria-expanded="false" aria-controls="multi-two">
                                Listas
                            </a>
                            <ul id="multi-two" class="sidebar-dropdown list-unstyled collapse">
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="Localidad"
                                        asp-action="Index">Localidad</a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="Provincia"
                                        asp-action="Index">Provincias</a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="TiposProfesion"
                                        asp-action="Index">Tipos de Profesion</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
            </li>

            </ul>
            <div class="sidebar-footer">
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                        data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i class="lni lni-protection"></i>
                        <span>Iniciar</span>
                    </a>
                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    </ul>
                    <a class="sidebar-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                    </a>
                </li>
                
            </div>
        </aside>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        

        <script>
            const hamBurger = document.querySelector(".toggle-btn");

            hamBurger.addEventListener("click", function () {
                document.querySelector("#sidebar").classList.toggle("expand");
            });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
